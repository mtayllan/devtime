<% content_for :title, rodauth.login_page_title %>

<section class="h-screen">
  <div class="container px-6 py-12 h-full">
    <div class="flex flex-col justify-center items-center flex-wrap h-full g-6">
      <h4 class="text-xl font-semibold mb-5 pb-1">DevTime - Login</h4>
      <%= form_with url: rodauth.login_path, method: :post, data: { turbo: false } do |form| %>
        <div class="form-control w-full max-w-xs">
          <%= form.email_field rodauth.login_param, value: params[rodauth.login_param], id: "login", autocomplete: "email", placeholder: "Email", required: true, class: "input input-bordered w-full max-w-xs",  aria: ({ invalid: true, describedby: "login_error_message" } if rodauth.field_error(rodauth.login_param)) %>
          <label class="label">
            <%= content_tag(:span, rodauth.field_error(rodauth.login_param), class: "label-text-alt", id: "login_error_message") if rodauth.field_error(rodauth.login_param) %>
          </label>
        </div>
        <div class="form-control w-full max-w-xs">
          <%= form.password_field rodauth.password_param, value: "", id: "password", placeholder: "Password", autocomplete: rodauth.password_field_autocomplete_value, required: true, class: "input input-bordered w-full max-w-xs", aria: ({ invalid: true, describedby: "password_error_message" } if rodauth.field_error(rodauth.password_param)) %>
          <label class="label">
            <%= content_tag(:span, rodauth.field_error(rodauth.password_param), class: "label-text-alt", id: "password_error_message") if rodauth.field_error(rodauth.password_param) %>
          </label>
        </div>
        <div class="flex gap-3 items-center mb-6">
          <div class="form-control">
            <label class="label cursor-pointer justify-start gap-3">
              <%= form.check_box rodauth.remember_param, id: "remember-me", checked: true, class: "checkbox checkbox-primary" %>
              <span class="label-text">Remember me</span>
            </label>
          </div>
          <%= link_to "Forgot password?", rodauth.reset_password_request_path, class: "link link-primary" %>
        </div>
        <%= form.submit rodauth.login_button, class: "btn btn-primary w-full" %>
        <p class="text-sm font-semibold mt-2 pt-1 mb-0">
          Don't have an account?
          <%= link_to "Register", rodauth.create_account_path, class: "link link-primary" %>
        </p>
      <% end %>
    </div>
  </div>
</section>
