<% content_for :title, rodauth.login_page_title %>

<section class="h-screen">
  <div class="container px-6 py-12 h-full">
    <div class="flex flex-col justify-center items-center flex-wrap h-full g-6 text-gray-800">
      <h4 class="text-xl font-semibold mt-1 mb-12 pb-1">DevTime - Login</h4>
      <%= form_with url: rodauth.login_path, method: :post, data: { turbo: false } do |form| %>
        <div class="mb-6">
          <%= form.email_field rodauth.login_param, value: params[rodauth.login_param], id: "login", autocomplete: "email", placeholder: "Email", required: true, class: "form-control block w-full px-4 py-2 text-xl font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none",  aria: ({ invalid: true, describedby: "login_error_message" } if rodauth.field_error(rodauth.login_param)) %>
          <%= content_tag(:span, rodauth.field_error(rodauth.login_param), class: "invalid-feedback", id: "login_error_message") if rodauth.field_error(rodauth.login_param) %>
        </div>
        <div class="mb-6">
          <%= form.password_field rodauth.password_param, value: "", id: "password", placeholder: "Password", autocomplete: rodauth.password_field_autocomplete_value, required: true, class: "form-control block w-full px-4 py-2 text-xl font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none", aria: ({ invalid: true, describedby: "password_error_message" } if rodauth.field_error(rodauth.password_param)) %>
          <%= content_tag(:span, rodauth.field_error(rodauth.password_param), class: "invalid-feedback", id: "password_error_message") if rodauth.field_error(rodauth.password_param) %>
        </div>

        <div class="flex justify-between items-center mb-6">
          <div class="form-group form-check">
            <%= form.check_box rodauth.remember_param, id: "remember-me", checked: true, class: "form-check-input appearance-none h-4 w-4 border border-gray-300 rounded-sm bg-white checked:bg-blue-600 checked:border-blue-600 focus:outline-none transition duration-200 mt-1 align-top bg-no-repeat bg-center bg-contain float-left mr-2 cursor-pointer" %>
            <label class="form-check-label inline-block text-gray-800" for="remember-me">Remember me</label>
          </div>
          <%= link_to "Forgot password?", rodauth.reset_password_request_path, class: "text-blue-600 hover:text-blue-700 focus:text-blue-700 active:text-blue-800 duration-200 transition ease-in-out" %>
        </div>

        <%= form.submit rodauth.login_button, class: "inline-block px-7 py-3 bg-blue-600 text-white font-medium text-sm leading-snug uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out w-full" %>
        <p class="text-sm font-semibold mt-2 pt-1 mb-0">
          Don't have an account?
          <%= link_to "Register", rodauth.create_account_path, class: "text-blue-600 hover:text-blue-700 focus:text-blue-700 transition duration-200 ease-in-out"%>
        </p>
      <% end %>
    </div>
  </div>
</section>
